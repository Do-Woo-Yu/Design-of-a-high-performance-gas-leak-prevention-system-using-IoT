	write_cmd_data_b(0x22,0x00);
	write_cmd_data_b(0x05,0x28);
	write_cmd_data_b(0x06,0x03);
	write_cmd_data_b(0x2e,0x40);	
	write_cmd_data_b(0x2f,0x41);  
	Background_Color(b_color);
	Foreground_Color(t_color);
	Font_Coordinate(X,Y);
	write_cmd_b(0x02);
	while(*str != '\0')
	{
		write_data_b(*str);
		++str;	 	
		Chk_Busy();		
	}
}
    
