void clear_all(word b_color)
{ 
	Background_Color(b_color);
	write_cmd_b(0x8e);
	write_data_b(0x80);
	Chk_Busy();
	write_cmd_b(0x8e);
	write_data_b(0x00);
	write_cmd_data_b(0x40, 0x00);
}

