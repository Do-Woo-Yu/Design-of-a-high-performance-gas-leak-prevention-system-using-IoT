void dis_zheng(word x, word y, word back_color, word txt_color, byte *Lib)
{
	byte i,j,k;
	
	for(i=0;i<32;i++)				    
	{
		for(j=0;j<4;j++)			   
		{
			XY_Coordinate(x+8*j, y+i);
			for(k=0;k<8;k++)
			{
				if(Lib[4*i+j]<<k&0x80)				
				{
					write_data_b(txt_color>>8);
